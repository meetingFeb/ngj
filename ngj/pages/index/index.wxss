
/* 轮播图样式 */

page{
	background-color: #efefef;
}
swiper{
	padding: 20rpx;
	background-color: #fff;
	height: 450rpx;
	margin: 16rpx;
	border-radius: 20rpx;
	overflow: hidden;
}
swiper-item{
	border-radius: 20rpx;
	overflow: hidden;
}

swiper-item image{
	width: 100%;
	height: 100%;

}

/* 产品导航 */

.nav{
	display: flex;
	justify-content: space-around;
	padding: 20rpx;
	margin: 0 20rpx 20rpx 20rpx;
	background-color: #fff;
	border-radius: 20rpx;
}
.nav image{
	width: 100rpx;
	height: 100rpx;
}
.nav view{
	display: flex;
	flex-direction: column;
	align-items: center;
}
.nav text{
	font-size: 24rpx;
	margin-top: 12rpx;
}


/* 玉米病虫害知识库 */
.info{
	background-color: #fff;
	margin: 0 20rpx 20rpx 20rpx;
	border-radius: 20rpx;
	padding-bottom:30rpx ;
}
.info-bar{
	display: flex;
	justify-content: space-between;
	padding: 20rpx;
}
.info .info-bar .span{
	display: inline-block;
	height: 40rpx;
	border-radius: 5rpx;
	border-left:5px solid #797 ;
	margin:  0 20rpx 0 20rpx;
	padding:5rpx 0 10rpx 10rpx;
}
.info .info-bar .span text{
	font-size: larger;
	font-weight: 600;
}
.info .info-bar image{
	width: 25rpx;
	height: 25rpx;
}
.info .info-bar navigator text{
	color: #00f
}

.info-container{
	display: flex;
	justify-content: space-around;
	flex-wrap: wrap;
}
.info-container .info-container-items{
	background-color: #ded;
	padding: 30rpx 30rpx 50rpx 30rpx;
	margin-top: 30rpx;
	display: flex;
	flex-direction: column;
	align-items: center; /* 垂直居中 */
	border-radius: 20rpx;
}
.info-container image{
	width: 250rpx;
	height: 250rpx;
}
